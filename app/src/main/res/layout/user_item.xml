<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/user"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/userListImage"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/userListName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/userListImage"
        android:layout_centerVertical="true"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:text="청파동 불주먹"/>

    <ImageView
        android:id="@+id/status_on"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="12dp"
        android:tint="#B8EF8F"
        android:visibility="gone"
        android:layout_below="@+id/userListName"
        android:layout_toRightOf="@+id/userListImage"
        android:layout_toEndOf="@+id/userListImage"/>

    <ImageView
        android:id="@+id/status_off"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="12dp"
        android:tint="#CBCECA"
        android:visibility="gone"
        android:layout_below="@+id/userListName"
        android:layout_toRightOf="@+id/userListImage"
        android:layout_toEndOf="@+id/userListImage"/>

</RelativeLayout>